<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CDDC39"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_me"
        app:layout_constraintStart_toStartOf="@+id/button_me" />

    <TextView
        android:id="@+id/textView_genie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="44dp"
        android:text="| 你的身體開始不受控制..."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.011"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_me"
        android:layout_width="338dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:background="#878787"
        android:text="......."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/TableLayout_code"
        android:layout_width="412dp"
        android:layout_height="301dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtATM"
            android:layout_width="300dp"
            android:layout_height="49dp"
            android:background="#FAFAFA"
            android:focusable="false"
            android:gravity="center"
            android:textSize="28sp" />

        <TableRow android:gravity="center">

            <Button
                android:id="@+id/btnN1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="1" />

            <Button
                android:id="@+id/btnN2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="2" />

            <Button
                android:id="@+id/btnN3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="3" />
        </TableRow>

        <TableRow android:gravity="center">

            <Button
                android:id="@+id/btnN4"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="4" />

            <Button
                android:id="@+id/btnN5"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="5" />

            <Button
                android:id="@+id/btnN6"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="6" />
        </TableRow>

        <TableRow android:gravity="center">

            <Button
                android:id="@+id/btnN7"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="7" />

            <Button
                android:id="@+id/btnN8"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="8" />

            <Button
                android:id="@+id/btnN9"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="清除" />

            <Button
                android:id="@+id/btnN0"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="0" />

            <Button
                android:id="@+id/btnEnd"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="確認" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
